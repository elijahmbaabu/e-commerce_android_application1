<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#DC143C"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment">

    <TextView
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:id="@+id/txt"
        android:textColor="@color/black"
        android:gravity="center"
        android:textAlignment="center"
        android:text="Customer Registration"
        android:layout_margin="12dp"
        android:padding="12dp"
        android:textSize="24dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:hint="Enter Your Full names: "
        android:padding="12dp"
        android:layout_margin="12sp"
        android:textAlignment="textStart"
        android:textSize="20dp"
        tools:ignore="RtlCompat" />

    <EditText
        android:id="@+id/user_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/user_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:gravity="center_horizontal"
        android:hint="Enter Your Id No."
        android:padding="12dp"
        android:textAlignment="textStart"
        android:layout_margin="12sp"
        android:textSize="20dp"
        tools:ignore="RtlCompat" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/male"
        android:layout_below="@+id/user_id"
        android:text="Male"
        android:textSize="20dp"
        android:padding="12dp"
        android:layout_margin="12dp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/male"
        android:layout_below="@+id/user_id"
        android:text="Female"
        android:id="@+id/female"
        android:padding="12dp"
        android:layout_margin="12dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/user_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/male"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:hint="Enter Your Address:"
        android:padding="12dp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/town"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/user_address"
        android:hint="Enter Your Residential Town"
        android:padding="12dp"
        android:gravity="center_horizontal"
        android:textAlignment="textStart"
        android:layout_margin="12sp"
        android:textSize="20dp"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/town"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:background="@color/purple_700"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="Submit"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24dp" />




    <!-- TODO: Update blank fragment layout -->


</RelativeLayout>